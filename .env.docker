# Docker Development Environment Variables
# Copy this to .env.local for local development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/signature_app_dev
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=signature_app_dev
PGHOST=postgres
PGPORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_ACCESS_SECRET=your-access-token-secret-for-development
JWT_REFRESH_SECRET=your-refresh-token-secret-for-development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://frontend:5173

# Node Environment
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:5000
VITE_NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads